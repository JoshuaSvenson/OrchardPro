<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_bio_fix"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEF3CD"
    tools:context="com.joshuasvenson.insectmanager.BioFix">

    <TextView
        android:text="Enter Biofix Date"
        android:textSize="35sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Biofix_Title"
        android:layout_weight="1"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp" />

    <Button
        style="@style/CustomButton"
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:id="@+id/biofix_submit_button" />

    <DatePicker
        android:id="@+id/biofix_datePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="spinner"
        android:calendarViewShown="false"
        android:layout_above="@+id/biofix_submit_button"
        android:layout_alignRight="@+id/Biofix_Title"
        android:layout_alignEnd="@+id/Biofix_Title"
        android:layout_marginBottom="12dp" />

    <Spinner
        android:id="@+id/biofix_insect_spinner"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>

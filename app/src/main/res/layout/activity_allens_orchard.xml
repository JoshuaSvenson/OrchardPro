<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:id="@+id/addOrchardLayout"

    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"

    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Home"
    android:background="@color/backgroundColor2"
    android:layout_width="match_parent"
    android:weightSum="1">

    <TextView
        android:id="@+id/ScreenTitle"
        android:text="Allen's Orchard"
        android:textSize="30sp"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="227dp"
        android:layout_height="wrap_content"
        android:gravity="center"/>

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft= "@+id/imageView1"
        android:layout_alignParentTop="true"
        android:layout_below="@+id/ScreenTitle"
        android:text="Set Picture from gallery"
        android:onClick="btnClick"/>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop ="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/button1"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spray Schedule"
        android:id="@+id/SprayScheduleButton"
        android:layout_below="@+id/imageView1"
        android:layout_marginTop="70dp"/>

    <Button
        android:text="Calculations"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OrchardCalculationsButton"
        android:layout_below="@+id/SprayScheduleButton" />

    <Button
        android:text="Biofix Data"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/BiofixDataButton"
        android:layout_below="@+id/OrchardCalculationsButton" />

    <Button
        android:text="Orchard Weather"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OrchardWeatherButton"
        android:layout_below="@+id/BiofixDataButton" />

    <Button
        android:text="Settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/OrchardSettingsButton"
        android:layout_below="@+id/OrchardWeatherButton" />

    <Button
        android:text="Delete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/DeleteButton"
        android:layout_below="@+id/OrchardSettingsButton" />


</LinearLayout>